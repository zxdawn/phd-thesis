  author = {Rantanen, Mika and Karpechko, Alexey Yu and Lipponen, Antti and Nordling, Kalle and Hyv{\"a}rinen, Otto and Ruosteenoja, Kimmo and Vihma, Timo and Laaksonen, Ari},
