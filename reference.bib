@article{Brown.2022,
  title = {The Ozone\textendash Climate Penalty over {{South America}} and {{Africa}} by 2100},
  author = {Brown, Flossie and Folberth, Gerd A. and Sitch, Stephen and Bauer, Susanne and Bauters, Marijn and Boeckx, Pascal and Cheesman, Alexander W. and Deushi, Makoto and Dos Santos Vieira, In{\^e}s and {Galy-Lacaux}, Corinne and Haywood, James and Keeble, James and Mercado, Lina M. and O'Connor, Fiona M. and Oshima, Naga and Tsigaridis, Kostas and Verbeeck, Hans},
