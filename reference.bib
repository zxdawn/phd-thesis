@article{VanGeffen.2022,
  title = {Sentinel-{{5P TROPOMI NO}}{\textsubscript{2}} Retrieval: Impact of Version v2.2 Improvements and Comparisons with {{OMI}} and Ground-Based Data},
  shorttitle = {Sentinel-{{5P TROPOMI NO}}{\textsubscript{2}} Retrieval},
  author = {{van Geffen}, Jos and Eskes, Henk and Compernolle, Steven and Pinardi, Gaia and Verhoelst, Tijl and Lambert, Jean-Christopher and Sneep, Maarten and {ter Linden}, Mark and Ludewig, Antje and Boersma, K. Folkert and Veefkind, J. Pepijn},
