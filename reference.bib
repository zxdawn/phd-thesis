@article{Li.2022,
  title = {Significant Contribution of Lightning {{NOx}} to Summertime Surface {{O3}} on the {{Tibetan Plateau}}},
  author = {Li, Minglu and Mao, Jingying and Chen, Shuqing and Bian, Jianchun and Bai, Zhixuan and Wang, Xuemei and Chen, Weihua and Yu, Pengfei},
