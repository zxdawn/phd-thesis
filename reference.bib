@article{Duncan.2007,
  title = {Model Study of the Cross-Tropopause Transport of Biomass Burning Pollution},
  author = {Duncan, B. N. and Strahan, S. E. and Yoshida, Y. and Steenrod, S. D. and Livesey, N.},
  year = {2007},
