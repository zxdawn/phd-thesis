@article{Dickerson.1987,
  title = {Thunderstorms: An Important Mechanism in the Transport of Air Pollutants},
  author = {Dickerson, R. R. and Huffman, G. J. and Luke, W. T. and Nunnermacker, L. J. and Pickering, K. E. and Leslie, A. C. and Lindsey, C. G. and Slinn, W. G. and Kelly, T. J. and Daum, P. H. and Delany, A. C. and Greenberg, J. P. and Zimmerman, P. R. and Boatman, J. F. and Ray, J. D. and Stedman, D. H.},
