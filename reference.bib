@article{Wang.2021a,
  title = {Observational {{Evidence}} of {{Lightning-Generated Ultrafine Aerosols}}},
  author = {Wang, Honglei and Pei, Yuxuan and Yin, Yan and Shen, Lijuan and Chen, Kui and Shi, Zheng and Chen, Jinghua},
