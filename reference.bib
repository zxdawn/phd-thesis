@article{Guenther.1999,
  title = {Isoprene Emission Estimates and Uncertainties for the Central {{African EXPRESSO}} Study Domain},
  author = {Guenther, Alex and Baugh, Bill and Brasseur, Guy and Greenberg, Jim and Harley, Peter and Klinger, Lee and Ser{\c c}a, Dominique and Vierling, Lee},
